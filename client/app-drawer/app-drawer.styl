.app-drawer
    width 100%

    .app-drawer-header
        box-sizing border-box
        display flex
        flex-direction column
        justify-content flex-end
        padding 16px
        background-color #3F51B5

    .app-drawer-avatar
        width 48px
        height 48px
        border-radius 24px

    .app-drawer-name
        color white

    .app-drawer-email
        color whitesmoke

    .app-drawer--separator
        border-top 1px solid rgba(0,0,0,.1)

    .app-drawer--icon
        vertical-align bottom
        padding-right 12px

    nav.mdl-navigation
        padding-top 0
